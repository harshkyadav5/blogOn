<%- include("partials/header.ejs") %>


<% if (locals.post) { %>
    <h1>Edit Blog</h1>
    <form action="/posts/<%= post.id %>" method="PUT" class="createPost">
        <div>
            <label>Title</label>
            <!-- <input type="text" name="blogTitle" placeholder="Title of blog . . ." minlength="1" maxlength="200" required/> -->
            <input type="text" name="title" placeholder="Title of blog . . ." value="<%=post.title %>"  minlength="1" maxlength="200" required/>
        </div>
        <div>
            <label>Author</label>
            <!-- <input type="text" name="blogAuthor" placeholder="Author name . . ." minlength="1" maxlength="100" required/> -->
            <input type="text" name="author" placeholder="Author name . . ." value="<%=post.author %>" minlength="1" maxlength="100" required/>
        </div>
        <div>
            <label>Content</label>
            <!-- <input type="text" name="postBody" minlength="1" maxlength="10000" required/> -->
            <!-- <textarea type="text" name="blogBody" placeholder=". . ." maxlength="10000" required></textarea> -->
            <textarea type="text" name="content" placeholder=". . ." maxlength="10000" required><%=post.content %></textarea>
        </div>
        <div id="formButton">
            <input type="submit" id="submit" value="Post Blog">
        </div>
    </form>
    <% } else { %>
        <h1>Create Blog</h1>
    <form action="/posts" method="POST" class="createPost">
        <div>
            <label>Title</label>
            <!-- <input type="text" name="blogTitle" placeholder="Title of blog . . ." minlength="1" maxlength="200" required/> -->
            <input type="text" name="title" placeholder="Title of blog . . ."  minlength="1" maxlength="200" required/>
        </div>
        <div>
            <label>Author</label>
            <!-- <input type="text" name="blogAuthor" placeholder="Author name . . ." minlength="1" maxlength="100" required/> -->
            <input type="text" name="author" placeholder="Author name . . ." minlength="1" maxlength="100" required/>
        </div>
        <div>
            <label>Content</label>
            <!-- <input type="text" name="postBody" minlength="1" maxlength="10000" required/> -->
            <!-- <textarea type="text" name="blogBody" placeholder=". . ." maxlength="10000" required></textarea> -->
            <textarea type="text" name="content" placeholder=". . ." maxlength="10000" required></textarea>
        </div>
        <div id="formButton">
            <input type="submit" id="submit" value="Post Blog">
        </div>
    </form>
<% } %>

